/* === Menu Page Styling === */
/* Container for the buttons */
#menuPage #gridFrame {
    background-color: rgba(245, 247, 248, 0.96); /* Similar to login card */
    border-radius: 15px;
    padding: 25px;
    margin: 20px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

/* Base style for all buttons on the menu page */
#menuPage QPushButton {
    background-color: #FFFFFF; /* White background */
    color: #333333; /* Dark text */
    border: 1px solid #E8E8E8; /* Light border */
    border-radius: 12px; /* Rounded corners */
    padding: 20px 15px; /* Generous padding */
    font-size: 11pt;
    font-weight: 600; /* Semibold */
    text-align: center;
    min-height: 110px; /* Make buttons squarish */
    min-width: 160px;
    /* Icons are best set via C++ using setIcon() */
    /* Icon size can be set via C++ setIconSize() or QSS */
    qproperty-iconSize: 80px 80px; /* Adjust size as needed */
    /* Tooltip style (optional) */
    /* QToolTip { background-color: black; color: white; border: none; } */
}

#menuPage QPushButton:hover {
     background-color: #F8F8F8; /* Slightly grey on hover */
     border-color: #D0D0D0;
}
#menuPage QPushButton:pressed {
     background-color: #EDEDED; /* Darker grey when pressed */
}

