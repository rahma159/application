/* === QMessageBox Styling (Basic Example) === */
QMessageBox {
    background-color: #FDFDFD;
    border: 1px solid #E0E0E0;
    border-radius: 8px; /* Requires Qt 6+ for consistent rounding */
}
QMessageBox QLabel { /* Message text */
    background-color: transparent;
    color: #333;
    font-size: 10pt;
    min-width: 250px; /* Prevent tiny boxes */
    padding: 10px;
}
QMessageBox QPushButton { /* OK, Cancel buttons */
    background-color: #1B4965;
    color: white;
    font-weight: bold;
    font-size: 9pt;
    border: none;
    border-radius: 6px;
    padding: 8px 20px;
    margin: 5px;
    min-width: 70px;
}
QMessageBox QPushButton:hover {
    background-color: #153A55;
}
QMessageBox QPushButton:pressed {
    background-color: #102A40;
}
