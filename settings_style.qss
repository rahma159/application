/* --- CheckBox --- */
QCheckBox {
    spacing: 7px; /* Space between checkbox and text */
    color: #333333;  /* Default text color */
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #d1d5db; /* Input border color (same as others) */
    border-radius: 3px;
    background-color: white;
}
QCheckBox::indicator:hover {
    border-color: #4a6fa5;
}

QCheckBox::indicator:checked {
    background-color: #4a6fa5; /* Primary blue */
    border-color: #4a6fa5;
    /* You might include a checkmark image here too */
    /* image: url(:/icons/checkmark_white.png); */
}

QCheckBox::indicator:unchecked:hover {
    border-color: #3a5a8f; /* Darker blue on hover if unchecked */
}


/* --- Placeholders Info Label --- */
QLabel#placeholdersInfoLabel {
    font-style: normal;
    font-weight: normal;
    color: #6b7280; /* Medium grey */
    font-size: 9pt;
    margin-top: 10px; /* Add some space above it */
}

/* --- GroupBox Styling (If you use GroupBoxes within tabs) --- */
QGroupBox {
    border: 1px solid #d1d5db;
    border-radius: 6px;
    margin-top: 15px; /* Space above groupbox */
    padding: 10px;
    padding-top: 25px; /* Space for the title */
    background-color: white; /* White background for content inside */
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    padding: 0px 5px 0px 5px;
    background-color: white; /* Background to cover border */
    color: #4a6fa5; /* Primary blue title */
    font-weight: bold;
}
